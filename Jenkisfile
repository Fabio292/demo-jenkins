pipeline {
    agent any
    environment {
        registry = '102212442704.dkr.ecr.eu-north-1.amazonaws.com/fabio-demo-jenkins:latest'
    }
    stages {
        stage("Checkout") {
            steps {
                    git branch: 'master',
                        credentialsId: 'github',
                        url: 'https://github.com/Fabio292/demo-jenkins.git'
               }
        }
        stage("Docker Build") {
            steps {
                sh "docker build -t fabio-demo-jenkins:latest ."
            }
        }
        stage("ECR Login") {
            steps {
                withAWS(credentials:'aws-credential') {
                    script {
                        def login = ecrLogin()
                        sh "${login}"
                    }
                }
            }
        }
        stage("Docker Push") {
            steps {
                sh "docker push ${registry}"
            }
        }
    }
    post {
        success {
            echo 'ending'
            build job: 'TestJob-CD'
        }
    }
}
